@model IEnumerable<Lab5.Models.AnswerImages>
@{ ViewData["Title"] = "Index"; }
<h1>Index</h1>
<p>
    <a asp-action="Upload">Upload New</a>
</p>
<hr />
@if (Model.Count() == 0)
{
<p>There are no files to display.</p> }
            else
            {
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FileName)
            </th>
            <th>
                Question
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.FileName)
    </td>
   
    <td>
        <img src="@item.Url" style="max-width: 400px;" />
    </td>
    <td>
        <a asp-action="Delete" asp-route-id="@item.AnswerImageID">Delete</a>
    </td>
</tr>
}
</tbody>
</table>
}